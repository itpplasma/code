{
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    "git.confirmSync": false,
    "fortran.fortls.excludeDirectories": [
        "**/BUILD",
        "**/build"
    ],
    "fortran.linter.includePaths": [
        "${workspaceFolder}/libneo/build",
        "${workspaceFolder}/libneo/build/src",
        "${workspaceFolder}/SIMPLE/build/SRC",
        "${workspaceFolder}/NEO-RT/build/OBJS"
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.egg-info": true
    },
    "editor.rulers": [
        88
    ],
    "files.associations": {
        "*.nix": "nix",
        "*.in": "FortranFreeForm",
        "*.nml": "FortranFreeForm"
    },
    "python.terminal.activateEnvironment": false,
    "githubPullRequests.ignoredPullRequestBranches": [
        "main"
    ],
    "fortran.linter.modOutput": "${workspaceFolder}/.fortls",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "github.codespaces.devcontainerChangedNotificationStyle": "none",
    "testing.automaticallyOpenTestResults": "neverOpen",
    "fortran.formatting.formatter": "fprettify",
    "fortran.formatting.fprettifyArgs": [
        "-i 4",
        "--enable-decl",
        "--whitespace-comma",
        "--whitespace-assignment",
        "--whitespace-decl",
        "--whitespace-relational",
        "--whitespace-logical",
        "--whitespace-print",
        "--whitespace-type",
        "--whitespace-intrinsics",
        "--case",
        "1",
        "1",
        "1",
        "1"
    ],
    "sarif-viewer.connectToGithubCodeScanning": "off",
    "fortran.fortls.excludeSuffixes": [
        "-pp.f90"
    ]
}

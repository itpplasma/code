{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: f90wrap",
            "type": "debugpy",
            "request": "launch",
            "module": "f90wrap",
            "cwd": "${workspaceFolder}/f90wrap/examples/issue227_allocatable",
            "args": ["-m", "itest", "-P", "alloc_output.f90", "-v"],
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
        },
        {
            "name": "simple.x in examples",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SIMPLE/build/simple.x",
            "cwd": "${workspaceFolder}/SIMPLE/examples/meiss",
        }
    ]
}

#%Module1.0

proc ModulesHelp { } {
    puts stderr "environment for MEPHIT

  Please send remarks on using this module to Patrick Lainer
  (mailto:patrick.lainer@tugraz.at)"
}

module-whatis "use MEPHIT"

prereq fgsl/1.6.0
prereq --optional mfem/4.7

setenv LIBNEO_DIR $env(CODE)/libneo/build
setenv MEPHIT_DIR $env(CODE)/MEPHIT/build
setenv MEPHIT_RUN_DIR $env(CODE)/MEPHIT/run

